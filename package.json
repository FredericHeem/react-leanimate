{
  "name": "react-leanimate",
  "description": "a lightweight library to animate react components",
  "homepage": "http://fredericheem.github.io/react-leanimate",
  "version": "0.12.1",
  "private": false,
  "source": "src/Animate.js",
  "keywords": [
    "react",
    "react component",
    "animation",
    "animate",
    "transition",
    "fade"
  ],
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "build:lib": "microbundle -i src/Animate.js -i src/Smooth.js --external all --jsx React.createElement",
    "postversion": "npm publish && npm run deploy && git push && git push --tags",
    "prepare": "npm run build:lib"
  },
  "devDependencies": {
    "@storybook/react": "^3.3.14",
    "gh-pages": "^1.1.0",
    "microbundle": "^0.4.4"
  },
  "bugs": {
    "url": "https://github.com/FredericHeem/react-leanimate/issues"
  },
  "repository": {
    "type": "git",
    "url": "github:FredericHeem/react-leanimate"
  },
  "license": "MIT"
}
